<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hope.coolcalculator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"
        android:background="@color/greyBackground"
        android:id="@+id/result_text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <!-- Button 7 -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seven"
        android:textSize="@dimen/my_text_size"
        android:background="@color/greyBackground"
        android:layout_weight="1"
        android:onClick="buttonSevenPressed"

        />
        <!-- Button 8 -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eight"
            android:textSize="@dimen/my_text_size"
            android:background="@color/greyBackground"
            android:layout_weight="1"
            android:onClick="buttonEightPressed"
            />

        <!-- Button 9 -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nine"
            android:textSize="@dimen/my_text_size"
            android:background="@color/greyBackground"
            android:layout_weight="1"
            android:onClick="buttonNinePressed"
            />

        <!-- Button X -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x"
            android:textSize="@dimen/my_text_size"
            android:background="@color/greyBackground"
            android:layout_weight="1"
            android:onClick="buttonXPressed"
            />

    </LinearLayout>
</LinearLayout>
